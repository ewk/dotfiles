[init]
    defaultBranch = main

[user]
    name = Eddie Kovsky
    email = ewk@edkovsky.org

[core]
    editor = $EDITOR
    abbrev = 12 # default 7 char abbreviations may collide

[format]
    signOff = true
    coverLetter = auto

[pretty]
    log = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[alias]
    g = grep --break --heading
    lg = log --color --graph --abbrev-commit --pretty=log
    diff = diff --check # check if patch introduces whitespace errors

[credential]
    helper = cache --timeout=3600

[push]
    followTags = true

[fetch]
    prune = true
    pruneTags = true

[grep]
    extendRegexp = true
    lineNumber = true

[sendemail]
    from = Eddie Kovsky <ewk@edkovsky.org>
    smtpserver = "/usr/bin/msmtp"
    smtpencryption = tls
    confirm = always #auto
	#suppress-cc = author, self
    suppressFrom = true

[commit]
    verbose = true # show full patch when editing the commit message

[tag]
    sort = version:refname

[rerere]
    enabled = true
