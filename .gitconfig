[global]

[user]
    name = Eddie Kovsky
    email = ewk@edkovsky.org
    #signingkey = <gpg-key-id>

[core]
    excludesfile = ~/.gitignore
    editor = $EDITOR
    abbrev = 12 # default 7 char abbreviations may collide
    pager = less # default is less
    whitespace = trailing-space,space-before-tab,-indent-with-non-tab,-cr-at-eol
    #template = ~/.gitmessage # commit message template
    #autocrlf = true # autoconvert Windows carriage return brain damage

[format]
    signOff = True # enable --signoff for format-patch
    coverLetter = auto # generate a cover letter for multiple patches

[alias]
    g = grep -P --break --heading --line-number
    hist = log --color --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    title = show -s --abbrev-commit --abbrev=12 --pretty=format:"%h (\"%s\")%n"

[credential]
    helper = cache --timeout=3600

[push]
    default = matching

[color]
    ui = true

[grep]
    #extendRegexp = true # ignored when patternType is set
    lineNumber = true
    patternType = perl

[merge]
    tool = gvimdiff
