[global]

[user]
	name = Eddie Kovsky
	email = ewk@edkovsky.org

[core]
	excludesfile = ~/.gitignore
	editor = gvim -f

[alias]
    g = grep -P --break --heading --line-number
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[credential]
	helper = cache --timeout=3600

[push]
	default = matching

[color]
	ui = true

[format]
    #headers = "Organization: git-foo\n"
    #subjectprefix = CHANGE
    #suffix = .txt
    #numbered = auto
    #to = <email>
    #cc = <email>
    #attach [ = mime-boundary-string ]
    signoff = true

[sendemail]
    smtpserver = box492.bluehost.com
    smtpserverport = 465
    smtpencryption = ssl
    smtpuser = ewk+edkovsky.org
    confirm = always

[grep]
	extendRegexp = true
	lineNumber = true
